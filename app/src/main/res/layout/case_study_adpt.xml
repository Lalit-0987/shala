<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/card_adpt"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Subject"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="5dp"/>

        <TextView android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Class Code"
            android:gravity="right"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:textSize="13sp"
            android:paddingTop="5dp"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp">


        <View android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


        <LinearLayout android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="@drawable/subject_adpt"
            android:backgroundTint="@color/gray_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Case Study"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>