<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_adpt"
    android:backgroundTint="@color/light_bg"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/subject"
            android:text="Subject"
            android:textSize="22sp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"/>

        <TextView android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/session"
            android:gravity="right"
            android:text="Session\n12 / 44"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="55%"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true">



            <LinearLayout android:id="@+id/score"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/card_adpt"
                android:backgroundTint="@color/circle_light"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">



            <LinearLayout android:id="@+id/attend_no"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 / 12 "
                    android:textColor="@color/gray_text_light"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>