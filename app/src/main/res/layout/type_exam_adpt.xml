<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/university"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/college_exam"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College Exam"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/internal_Exam"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Internal Exam"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/online_exam"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online Exam"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/group_discussion"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Goup Discussion"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/oral_test"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oral Test"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/quiz"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz / Aptitude Test"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout android:layout_weight="0.25"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="@drawable/card_adpt"
            android:backgroundTint="@color/header">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/assignment"
                app:tint="@color/img_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assignment"
                android:textColor="@color/img_color"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>